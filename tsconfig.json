{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "es2018.asynciterable"
    ]
  },
  "include": ["./src/**/*"]
}
